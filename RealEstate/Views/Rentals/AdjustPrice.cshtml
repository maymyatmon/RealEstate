@model RealEstate.Models.Rental
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Adjust Price</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">
                Description
            </label>
            <div>
                @Model.Description
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                Old Price
            </label>
            <div>
                @Model.Price
            </div>
        </div>

        <div class="form-group">
            @Html.Label("AdjustPrice", "Adjust Price", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("NewPrice")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Reason", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Reason")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adjust" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
